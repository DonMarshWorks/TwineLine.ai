---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'TwineLine.ai - Relive your memories through intelligent slideshows' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen antialiased" style="font-family: 'Inter', system-ui, sans-serif; color: var(--text-primary); background: var(--bg-deep);">
    <!-- Animated background blobs -->
    <div class="animated-bg">
      <div class="animated-bg-blob"></div>
    </div>

    <header class="glass-nav sticky top-0 z-50">
      <nav class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a href="/" class="text-xl font-semibold tracking-tight" style="color: var(--text-primary);">
          TwineLine<span class="font-light" style="color: var(--accent);">.ai</span>
        </a>
        <div class="flex items-center gap-6">
          <a href="/introduction" class="text-sm transition-colors" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent)'" onmouseout="this.style.color='var(--text-secondary)'">Docs</a>
          <a href="/guide" class="text-sm transition-colors" style="color: var(--text-secondary);" onmouseover="this.style.color='var(--accent)'" onmouseout="this.style.color='var(--text-secondary)'">Setup Guide</a>
          <a href="/quickstart" class="btn-accent">
            Get Started
          </a>
        </div>
      </nav>
    </header>

    <main class="relative z-10">
      <slot />
    </main>

    <footer class="relative z-10 mt-24" style="border-top: 1px solid var(--glass-border);">
      <div class="mx-auto max-w-6xl px-6 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-sm" style="color: var(--text-muted);">
            &copy; {new Date().getFullYear()} TwineLine.ai. All rights reserved.
          </p>
          <div class="flex gap-6">
            <a href="/introduction" class="text-sm transition-colors" style="color: var(--text-muted);" onmouseover="this.style.color='var(--accent)'" onmouseout="this.style.color='var(--text-muted)'">Docs</a>
            <a href="/guide" class="text-sm transition-colors" style="color: var(--text-muted);" onmouseover="this.style.color='var(--accent)'" onmouseout="this.style.color='var(--text-muted)'">Setup Guide</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
