---
import BaseLayout from '../layouts/BaseLayout.astro';
import ConfigGuide from '../components/ConfigGuide.vue';
---

<BaseLayout title="Setup Guide - TwineLine.ai" description="Interactive setup guide for TwineLine.ai">
  <section class="mx-auto max-w-6xl px-6 py-20">
    <div class="text-center mb-14">
      <h1 class="text-4xl font-bold tracking-tight" style="color: var(--text-primary);">Setup Guide</h1>
      <p class="mt-4 text-lg" style="color: var(--text-secondary);">
        Answer a few questions and we'll generate the right install commands for your setup.
      </p>
    </div>

    <ConfigGuide client:load />
  </section>
</BaseLayout>
