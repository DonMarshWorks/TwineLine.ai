{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Astro Dev Server",
      "type": "shell",
      "command": "npm run dev 2>&1 | cat || exit 0",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true,
        "close": false
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "astro",
            "endsPattern": "4321"
          }
        }
      ]
    },
    {
      "label": "Cleanup Servers",
      "type": "shell",
      "command": "pid=$(netstat -ano 2>/dev/null | grep ':4321.*LISTENING' | awk '{print $NF}' | head -1); [ -n \"$pid\" ] && taskkill //F //PID $pid >/dev/null 2>&1; exit 0",
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Prepare Debug Environment",
      "dependsOrder": "sequence",
      "dependsOn": ["Cleanup Servers", "Start Astro Dev Server"],
      "problemMatcher": []
    }
  ]
}
