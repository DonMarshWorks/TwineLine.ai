{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Astro Dev Server",
      "type": "shell",
      "command": "npm run dev || exit 0",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true,
        "close": false
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "astro",
            "endsPattern": "(ready in|Local:)"
          }
        }
      ]
    },
    {
      "label": "Cleanup Servers",
      "type": "shell",
      "windows": {
        "command": "taskkill /F /IM node.exe /FI \"WINDOWTITLE eq npm*\" >nul 2>&1 || exit /b 0",
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/c"]
          }
        }
      },
      "linux": {
        "command": "pkill -f 'astro dev' || true"
      },
      "osx": {
        "command": "pkill -f 'astro dev' || true"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      },
      "problemMatcher": []
    },
    {
      "label": "Prepare Debug Environment",
      "dependsOrder": "sequence",
      "dependsOn": ["Cleanup Servers", "Start Astro Dev Server"],
      "problemMatcher": []
    }
  ]
}
